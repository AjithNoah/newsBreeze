<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llInput"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@android:color/black"
            android:text="Register"
            >

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopStart="@dimen/_10sdp"
            app:hintEnabled="true"
            app:boxStrokeWidth="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/llTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter Name"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:id="@+id/edtNameRegister"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopStart="@dimen/_10sdp"
            app:hintEnabled="true"
            app:boxStrokeWidth="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/llTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter E-mail"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:id="@+id/edtEmailRegister"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopStart="@dimen/_10sdp"
            app:hintEnabled="true"
            app:boxStrokeWidth="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/llTitle"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Enter Phone Number"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:id="@+id/edtPhone"
                android:textSize="14sp"
                android:inputType="number
"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/border_fullwidth_grey"
            android:padding="@dimen/_8sdp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerVertical="true"
                android:dropDownVerticalOffset="50dp"
                android:id="@+id/spinnerProfession"
                >

            </Spinner>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:tint="@android:color/black"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                >

            </ImageView>




        </RelativeLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtinpPassword"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopStart="@dimen/_10sdp"
            app:hintEnabled="true"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/txtinpEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:background="@null"
                android:hint="Enter Password"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:id="@+id/edtPasswordRegister"
                android:textSize="14sp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:boxCornerRadiusTopEnd="@dimen/_10sdp"
            app:boxCornerRadiusBottomEnd="0dp"
            app:boxCornerRadiusBottomStart="0dp"
            app:boxCornerRadiusTopStart="@dimen/_10sdp"
            app:hintEnabled="true"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/txtinpEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            >


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_10sdp"
                android:background="@null"
                android:hint="Enter Password"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:id="@+id/edtCPass"
                android:textSize="14sp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegister"
            android:text="Register"
            android:visibility="visible"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_35sdp"
            app:cornerRadius="@dimen/_15sdp"
            >

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/textLogin"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="Having an account? Login"
        >

    </TextView>



</RelativeLayout>